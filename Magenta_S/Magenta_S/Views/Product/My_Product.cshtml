@model Magenta_S.Models.ProductA
@{
    Layout = null;
}

<<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content="">

    <link href="~/Content/Home/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Home/fontawesome/js/all.css" rel="stylesheet" />
    <link href="~/Content/My_Product/style.css" rel="stylesheet" />
    <link href="~/Content/Home/css/dosis.css" rel="stylesheet" />
    <link href="~/Content/Home/css/roboto.css" rel="stylesheet" />
    <style>
        .item.header {
            background-image: url('../../../Image/Home/homeimg.jpg');
        }

        .update {
            margin-top: -91px;
        }

        .bu {
            height: 50px;
        }

        .navbar-header .in {
            margin-left: -5px;
            height: 50px;
            width: 280px;
        }
    </style>

</head>
<body>

    <!-- HEADER =============================-->
    <header class="item header margin-top-0">
        <div class="wrapper">
            <nav role="navigation" class="navbar navbar-white navbar-embossed navbar-lg navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button data-target="#navbar-collapse-02" data-toggle="collapse" class="navbar-toggle" type="button">
                            <i class="fa fa-bars"></i>
                            <span class="sr-only">Toggle navigation</span>

                        </button>
                        <a   href='@Url.Action("HomeDealer", "Home")' class="navbar-brand brand"><img src="~/Image/logo.png" width="110" height="110" style="margin-top: -23px;" /> </a>



                        <ul class="nav navbar-nav navbar-left">

                        </ul>
                        <button class="bu"> SERACH </button>
                        <input type="search" class="in">
                    </div>
                    <div id="navbar-collapse-02" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li class="propClone mb"><a href='@Url.Action("UpdateAccount", "Account",new {@id=Model.Idu })'><i class="fa fa-user fa-3x"></i></a></li>
                            <li class="propClone mb"><a  href='@Url.Action("Carta", "Bays")'><i class="fa fa-shopping-cart fa-3x"></i></a></li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <div class="text-pageheader">
                            <div class="subtext-image" data-scrollreveal="enter bottom over 1.7s after 0.1s">
                                My Products
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </header>

    <!-- CONTENT =============================-->
    <!--navbar-->
    <!--start allllllllll 99999999999999999999999-->
    <div class="container update">
        <div class="row">
            @{  bool s = false;}
            @foreach (var item in Model.getallproduct)
            {
                using (@Html.BeginForm(new { @idproduct = item.Idproduct }))
                {
                    s = true;
                    @*<select class="form-select s1">
                            <optgroup label="TYPE OF PRODUCT"></    optgroup>
                            <option selected class="bo">ِAll</option>
                            <option value="1">Tshirt</option>
                            <option value="2">Address</option>
                            <option value="3">Shoes</option>
                            <option value="3">Shirt</option>
                            <option value="3">Trousers</option>
                            <option value="3">Jeans</option>
                        </select>
                        <select class="form-select">
                            <optgroup label="GENDER OF PRODUCT"></optgroup>
                            <option selected>All</option>
                            <option value="1">Male</option>
                            <option value="2">Female</option>
                        </select>
                        <select class="form-select">
                            <optgroup label="Quality"></optgroup>
                            <option selected>All</option>
                            <option value="1">Cotton</option>
                            <option value="2">Wool</option>
                            <option value="3">WaterProof</option>
                        </select>*@






                    <!-- /.productbox -->
                    <div class="col-md-4">
                        <div class="productbox">
                            <div class="fadeshop">
                                <div class="captionshop text-center" style="display: none;">
                                    <h3>@item.Quality</h3>
                                    <p>
                                        This is a short excerpt to generally describe what the item is about.
                                    </p>
                                    <p>
                                        <a href="#" class="learn-more detailslearn" data-toggle="modal" data-target="#@item.Idproduct"><i class="fa fa-link"></i> Details</a>
                                    </p>
                                </div>
                                <span class="maxproduct">  <img src="~/imageproduct/@Url.Content(item.image)" height="312" width="500" />  </span>
                            </div>
                            <div class="product-details">

                                <h1>@item.Type</h1>

                                <span class="price">
                                    <span class="edd_price newprice"> @item.Price </span>
                                    @{ int cp = item.Idproduct + 2; }
                                    <a class="btn btn-danger btnd" data-toggle="modal" data-target="#@cp" name="ss">Delete This Product</a><br>
                                    @*<a href='@Url.Action("Carta", "Bays")'>*@

                                    <button type="button" class="btn btn-primary btnu" value="update" onclick="window.location.href='@Url.Action("Modification", "Product", new { @Idproduct = item.Idproduct })'">Product Modification</button><br>
                                </span>
                            </div>
                        </div>
                    </div>




    <!-- Modals =============================-->

                    <div class="modal fade" tabindex="-1" role="dialog" id="@item.Idproduct">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title text-center">Details Of Product</h4>
                                </div>
                                <div class="modal-body text-center">
                                    <label>Type Of Product : </label> <span>@item.Type</span><br>
                                    <label>Gender Of Type : </label> <span>@item.Genderoftype</span><br>
                                    <label>Quality Of Product : </label> <span>@item.Quality</span><br>
                                    <label>Size Of Product : </label> <span>
                                        @foreach (var x in item.Sizes)
                                        {

                                            <text>    </text>   @x.size1;   <text> ,  </text>

}

                                    </span><br>
                                    <label>Made in : </label> <span>@item.Meadin</span><br>
                                    <label>Color Of Product : </label> <span>
                                        @foreach (var i in item.Colors)
                                        {
                                            <text>  </text>
                                            @i.ColorP}
                                    </span><br>
                                    <label>Description : </label> <span>@item.Description</span><br>

                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->



                    <div class="modal fade" tabindex="-1" role="dialog" id="@cp">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">

                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

                                    <h4 class="modal-title text-center">Are you sure to delete this product ?</h4>
                                </div>
                                <div class="modal-body text-center">

                                    <button type="submit" class="btn btn-danger" value="@item.Idproduct">DELETE</button>

                                </div>

                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                }
            }
        </div>
    </div>
    @if (s == false)
    {
    <section class="content-block" style="background-color:#00bba7;">
        <div class="container text-center">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="subtext-image" data-scrollreveal="enter bottom over 1.7s after 0.1s">
                        <h1 class="callactiontitle">
                            There is No products for you
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
    }
    <!--end alllllll 999999999999999999999999999-->
    <!-- FOOTER =============================-->
    <div class="footer text-center">
        <div class="container">
            <div class="row">
                <p class="footernote">
                    Connect with Magenta
                </p>
                <ul class="social-iconsfooter">
                    <li><a href="#"><i class="fa fa-phone" style="margin-top:25px;"></i></a></li>
                    <li><a href="#"><i class="fab fa-facebook-f" style="margin-top:25px;"></i></a></li>
                    <li><a href="#"><i class="fab fa-twitter" style="margin-top:25px;"></i></a></li>
                    <li><a href="#"><i class="fab fa-google-plus-g" style="margin-top:25px;"></i></a></li>
                    <li><a href="#"><i class="fab fa-pinterest-p" style="margin-top:25px;"></i></a></li>
                </ul>
                <p>
                    &copy; 2021 Magenta<br />

                </p>
            </div>
        </div>
    </div>

    <!-- Load JS here for greater good =============================-->
    <script src="~/Scripts/Home/jquery-.js"></script>
    <script src="~/Scripts/Home/bootstrap.min.js"></script>
    <script src="~/Scripts/Home/anim.js"></script>

    <script>
//----HOVER CAPTION---//
jQuery(document).ready(function ($) {
	$('.fadeshop').hover(
		function(){
			$(this).find('.captionshop').fadeIn(150);
		},
		function(){
			$(this).find('.captionshop').fadeOut(150);
		}
	);
});
    </script>
</body>
</html>