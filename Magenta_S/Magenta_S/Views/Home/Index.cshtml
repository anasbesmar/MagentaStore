@model Magenta_S.Models.ProductA

@{
    Layout = null;
}

<<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content="">
    <link href="~/Content/Home/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Home/fontawesome/js/all.css" rel="stylesheet" />
    <link href="~/Content/Home/css/style.css" rel="stylesheet" />
    <link href="~/Content/Home/css/dosis.css" rel="stylesheet" />
    <link href="~/Content/Home/css/roboto.css" rel="stylesheet" />
    <style>
        .item.header {
            background-image: url('../../../Image/Home/homeimg.jpg');
        }

        .bu {
            height: 50px;
            margin-left: 280px;
        }

        .navbar-header .in {
            margin-left: -5px;
            height: 50px;
            width: 300px;
        }

        * {
            font-family: Calibri;
        }
    </style>



</head>
<body>

    <!-- HEADER =============================-->
    <header class="item header margin-top-0">
        <div class="wrapper">
            <nav role="navigation" class="navbar navbar-white navbar-embossed navbar-lg navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header" style="height: 100px;">
                        <button data-target="#navbar-collapse-02" data-toggle="collapse" class="navbar-toggle" type="button">
                            <i class="fa fa-bars"></i>
                            <span class="sr-only">Toggle navigation</span>

                        </button>
                        <a href="Home.html" class="navbar-brand brand"> <img src="~/Image/logo.png" width="110" height="110" style="margin-top: -23px;" /> </a>



                       
                        <button class="bu"> SERACH </button>
                        <input type="search" class="in">
                    </div>

                    <div id="navbar-collapse-02" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">

                            <li class="propClone mb"><a href='@Url.Action("RegisterUser", "Account")'>  <i class="fa fa-user fa-3x"></i></a></li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <div class="text-pageheader">
                            <div class="subtext-image" data-scrollreveal="enter bottom over 1.7s after 0.1s">
                                Magenta Store
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- CONTENT =============================-->
    <!--navbar-->
    <!--navbar-->
    <section class="item content">
        <div class="container toparea">
            <div class="underlined-title">
                <div class="editContent">
                    <h1 class="text-center latestitems">OUR PRODUCTS</h1>

                </div>
                <div class="wow-hr type_short">
                    <span class="wow-hr-h">
                        <i class="fa fa-star fa-spin"></i>
                        <i class="fa fa-star fa-spin"></i>
                        <i class="fa fa-star fa-spin"></i>
                    </span>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model.productallshow)
            {
                using (@Html.BeginForm(new { @idproduct = item.Idproduct }))
                {

                        <!-- /.productbox -->
                        <div class="col-md-4">
                            <div class="productbox">
                                <div class="fadeshop">
                                    <div class="captionshop text-center" style="display: none;">
                                        <h3>SHOES</h3>
                                        <p>
                                            This is a short excerpt to generally describe what the item is about.
                                        </p>
                                        <p>
                                            @{  int mm = item.Idproduct + 99; }
                                        </p>
                                    </div>
                                    <span class="maxproduct"> <img src="~/imageproduct/@Url.Content(item.image)" height="312" width="500" />  </span>
                                </div>
                                <div class="product-details">

                                    <h1>@item.Type</h1>
                                    <span class="price">
                                        @{double total = item.Price * 1.05; }
                                        <span class="edd_price">@total</span>

                                    </span>
                                </div>
                            </div>
                        </div>




    <!-- CALL TO ACTION =============================-->


    <!-- FOOTER =============================-->

    <!-- Modals -->
                                            <div class="modal fade" tabindex="-1" role="dialog" id="@mm">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                            <h4 class="modal-title text-center">PURCHASE</h4>
                                                        </div>
                                                        <div class="modal-body">
                                                            <p>Are you sure you want to add the product to the cart?</p>
                                                            <div class="form-group">
                                                                <label>Enter the count you need :</label>
                                                                <input type="number" name="countp" class="form-control modal-count" required="" style="margin-left: 6px;"> <span class="modal-span"> / @item.count </span><br>
                                                                <label>Choose the Size you need :</label>
                                                                <div class="form-floating modal-count">
                                                                    @Html.Hidden("counttheproduct", item.count)
                                                                    <select class="form-control modal-count" name="selects">
                                                                        @{
                                                                            foreach (var s in item.Sizes)
                                                                            {

                                                                                <option value="@s.size1" customAttribute="item.SomethingSpecial">
                                                                                    @s.size1
                                                                                </option>
                                                                            }
                                                                        }
                                                                    </select>


                                                                </div>
                                                                <br>
                                                                <label>Choose the color you need :</label>
                                                                <div class="form-floating modal-count">

                                                                    <select class="form-control modal-count" name="selectc">
                                                                        @{
                                                                            foreach (var s in item.Colors)
                                                                            {

                                                                                <option value="@s.ColorP" customAttribute="item.SomethingSpecial">
                                                                                    @s.ColorP
                                                                                </option>
                                                                            }
                                                                        }
                                                                    </select>


                                                                </div>



                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">

                                                            <button type="submit" class="btn btn-success" value="@item.Idproduct">Purchase Product</button>
                                                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                        </div>
                                                    </div><!-- /.modal-content -->
                                                </div><!-- /.modal-dialog -->
                                            </div><!-- /.modal -->



                                                                            <div class="modal fade" tabindex="-1" role="dialog" id="@item.Idproduct">
                                                                                <div class="modal-dialog" role="document">
                                                                                    <div class="modal-content">
                                                                                        <div class="modal-header">
                                                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                                                            <h4 class="modal-title text-center">Details Of Product</h4>
                                                                                        </div>
                                                                                        <div class="modal-body text-center">
                                                                                            <label>Type Of Product : </label> <span>@item.Type</span><br>
                                                                                            <label>Gender Of Type : </label> <span>@item.Genderoftype</span><br>
                                                                                            <label>Quality Of Product : </label> <span>@item.Quality</span><br>
                                                                                            <label>Size Of Product : </label> <span>
                                                                                                @foreach (var s in item.Sizes)
                                                                                                {

                                                                                                    @s.size1

                                                                                                }
                                                                                            </span><br>
                                                                                            <label>Made in : </label> <span>@item.Colors</span><br>
                                                                                            <label>Color Of Product : </label> <span>
                                                                                                @foreach (var i in item.Colors)
                                                                                                {
                                                                                                    <text> and </text>
                                                                                                    @i.ColorP
                                                                                                }
                                                                                            </span><br>
                                                                                            <label>Description : </label> <span>@item.Description</span><br>

                                                                                        </div>
                                                                                        <div class="modal-footer">
                                                                                            <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                                                                                        </div>
                                                                                    </div><!-- /.modal-content -->
                                                                                </div><!-- /.modal-dialog -->
                                                                            </div><!-- /.modal -->
                                                                                }
                                                                            }
            </div>
        </div>
        <section class="content-block" style="background-color:#00bba7;">
            <div class="container text-center">
                <div class="row">
                    <div class="col-sm-10 col-sm-offset-1">
                        <div class="subtext-image" data-scrollreveal="enter bottom over 1.7s after 0.1s">
                            <h1 class="callactiontitle">
                                Stay tuned for more products from Magenta Store
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="footer text-center">
            <div class="container">
                <div class="row">
                    <p class="footernote">
                        Connect with Magenta
                    </p>
                    <ul class="social-iconsfooter">
                        <li><a href="#"><i class="fa fa-phone" style="margin-top:25px;"></i></a></li>
                        <li><a href="#"><i class="fab fa-facebook-f" style="margin-top:25px;"></i></a></li>
                        <li><a href="#"><i class="fab fa-twitter" style="margin-top:25px;"></i></a></li>
                        <li><a href="#"><i class="fab fa-google-plus-g" style="margin-top:25px;"></i></a></li>
                        <li><a href="#"><i class="fab fa-pinterest-p" style="margin-top:25px;"></i></a></li>
                    </ul>
                    <p>
                        &copy; 2021 Magenta<br />
                        <!-- Button trigger modal -->


                    </p>
                </div>
            </div>
        </div>

        <!-- Load JS here for greater good =============================-->

        <script src="~/Scripts/HomeDealer/jquery-.js"></script>
        <script src="~/Scripts/HomeDealer/bootstrap.min.js"></script>
        <script src="~/Scripts/HomeDealer/anim.home.تاجر.js"></script>

        <script>
        //----HOVER CAPTION---//
        jQuery(document).ready(function ($) {
            $('.fadeshop').hover(
                function () {
                    $(this).find('.captionshop').fadeIn(150);
                },
                function () {
                    $(this).find('.captionshop').fadeOut(150);
                }
            );
        });
        </script>
</body>



</html>