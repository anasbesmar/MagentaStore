                                                        <h4 class="modal-title text-center">PURCHASE</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to add the product to the cart?</p>
                                                        <div class="form-group">
                                                            <label>Enter the count you need :</label>
                                                            <input type="number" name="countp" class="form-control modal-count" required="" style="margin-left: 6px;"> <span class="modal-span"> / @item.count </span><br>
                                                            <label>Choose the Size you need :</label>
                                                            <div class="form-floating modal-count">
                                                                @Html.Hidden("counttheproduct", item.count)
                                                                <select class="form-control modal-count" name="selects">
                                                                    @{
                                                                        foreach (var s in item.Sizes)
                                                                        {

                                                                            <option value="@s.size1" customAttribute="item.SomethingSpecial">
                                                                                @s.size1
                                                                            </option>
                                                                        }
                                                                    }
                                                                </select>


                                                            </div>
                                                            <br>
                                                            <label>Choose the color you need :</label>
                                                            <div class="form-floating modal-count">

                                                                <select class="form-control modal-count" name="selectc">
                                                                    @{
                                                                        foreach (var s in item.Colors)
                                                                        {

                                                                            <option value="@s.ColorP" customAttribute="item.SomethingSpecial">
                                                                                @s.ColorP
                                                                            </option>
                                                                        }
                                                                    }
                                                                </select>


                                                            </div>



                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">

                                                        <button type="submit" class="btn btn-success" value="@item.Idproduct">Purchase Product</button>
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                    </div>
                                                </div><!-- /.modal-content -->
                                            </div><!-- /.modal-dialog -->
                                        </div><!-- /.modal -->



                                                                        <div class="modal fade" tabindex="-1" role="dialog" id="@item.Idproduct">
                                                                            <div class="modal-dialog" role="document">
                                                                                <div class="modal-content">
                                                                                    <div class="modal-header">
                                                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                                                        <h4 class="modal-title text-center">Details Of Product</h4>
                                                                                    </div>
                                                                                    <div class="modal-body text-center">
                                                                                        <label>Type Of Product : </label> <span>@item.Type</span><br>
                                                                                        <label>Gender Of Type : </label> <span>@item.Genderoftype</span><br>
                                                                                        <label>Quality Of Product : </label> <span>@item.Quality</span><br>
                                                                                        <label>Size Of Product : </label> <span>
                                                                                            @foreach (var s in item.Sizes)
                                                                                            {

                                                                                                @s.size1

                                                                                            }
                                                                                        </span><br>
                                                                                        <label>Made in : </label> <span>@item.Meadin</span><br>
                                                                                        <label>Color Of Product : </label> <span>
                                                                                            @foreach (var i in item.Colors)
                                                                                            {
                                                                                                <text>   </text>
                                                                                                @i.ColorP
                                                                                            }
                                                                                        </span><br>
                                                                                        <label>Description : </label> <span>@item.Description</span><br>

                                                                                    </div>
                                                                                    <div class="modal-footer">
                                                                                        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                                                                                    </div>
                                                                                </div><!-- /.modal-content -->
                                                                            </div><!-- /.modal-dialog -->
                                                                        </div><!-- /.modal -->
                                                                            }
                                                                        }
        </div>
    </div>
