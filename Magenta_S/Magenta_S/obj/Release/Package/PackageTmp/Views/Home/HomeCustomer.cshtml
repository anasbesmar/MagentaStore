    <div class="container">
        <div class="row">
            @foreach (var item in Model.productallshow)
            {
                using (@Html.BeginForm(new { @idproduct = item.Idproduct }))
                {

                        <!-- /.productbox -->
                    <div class="col-md-4">
                        <div class="productbox">
                            <div class="fadeshop">
                                <div class="captionshop text-center" style="display: none;">
                                    <h3>SHOES</h3>
                                    <p>
                                        This is a short excerpt to generally describe what the item is about.
                                    </p>
                                    <p>
                                        @{  int mm = item.Idproduct + 99; }
                                        <a href="#" class="learn-more detailslearn" data-toggle="modal" data-target="#@mm"><i class="fa fa-shopping-cart"></i> Purchase</a>
                                        <a href="#" class="learn-more detailslearn" data-toggle="modal" data-target="#@item.Idproduct"><i class="fa fa-link"></i> Details</a>
                                    </p>
                                </div>
                                <span class="maxproduct"> <img src="~/imageproduct/@Url.Content(item.image)" height="312" width="500" />  </span>
                            </div>
                            <div class="product-details">

                                <h1>@item.Type</h1>
                                <span class="price">
                                    @{double total = item.Price * 1.05;
                                        int tatol = (int)total;
                                    }
                                    <span class="edd_price" style="font-size:20px;font-weight:bold;color:#00802b">@tatol <text> S.P </text> </span>

                                </span>
                            </div>
                        </div>
                    </div>




    <!-- CALL TO ACTION =============================-->


    <!-- FOOTER =============================-->

    <!-- Modals -->
                                        <div class="modal fade" tabindex="-1" role="dialog" id="@mm">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
