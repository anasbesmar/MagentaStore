            <div class="collapse navbar-collapse">

             
                <form class="d-flex ">
                    <button class="btn btn-outline-success bu" type="submit">SEARCH</button>
                    <input class="form-control me-2 in" type="search" placeholder="" aria-label="Search">

                </form>
             

            </div>
        </div>
    </nav>


    <div class="container">
        <!-- DATA TABLE -->
        <div class="row">
            <div class="col-md-12">

                @*<div class="table-data__tool">
                <div class="table-data__tool-left mar">
                    <div class="rs-select2--light rs-select2--md">
                        <select class="js-select2" name="property">
                            <option selected="selected">All Status</option>
                            <option value="">Buy</option>
                            <option value="">Upload</option>
                            <option value="">Post</option>
                            <option value="">Create Account</option>
                        </select>
                        <div class="dropDownSelect2"></div>
                    </div>
                    <div class="rs-select2--light rs-select2--sm">
                        <select class="js-select2" name="time">
