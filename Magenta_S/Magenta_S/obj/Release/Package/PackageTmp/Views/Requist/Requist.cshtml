                <div class="table-responsive table-responsive-data2">
                    <table class="table table-data2">
                        <thead>
                            <tr>
                                <th>Number if bill</th>
                                <th>date</th>
                                <th>status</th>
                                <th>Phone</th>               
                                <th>new place</th>
                                <th> Totalprice</th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.getbill)
                            {
                                using (@Html.BeginForm("bay", "Requist", new { @idbill = item.Idbill }, FormMethod.Post))
                                {


                                    <tr class="tr-shadow">

                                        <td>@item.Idbill</td>
                                        <td>

                                            <span class="block-email">@item.date.ToShortDateString() </span>
                                        </td>
                                        <td><span class="status--sale">Basket</span></td>
                                        <td>
                                           @item.Newphone
                                        </td>
                                       
                                        <td>  @item.Newplace </td>

                                        <td><span class="status--sale">@item.Totalprice</span> </td>
                                      
               
                                        <td>
                                            <div class="table-data-feature">
                                                <button type="button" class="item n" data-toggle="tooltip" data-placement="top" title="More">
                                                    <i class="zmdi zmdi-more"></i>
                                                </button>
                                                <button class="item" name="submit" value="donep" data-toggle="tooltip" data-placement="top" title="Done" style="color:green">
                                                    <i class="zmdi zmdi-mail-send"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>

                            <!--المزيد-->
                                    foreach (var i in item.Buys)
                                    {


                                        <tr class="tr-shadow1 n">

                                            <td>@i.Product.Type</td>
                                            <td>
                                                <span class="block-email">@i.Product.Company</span>
                                            </td>

                                            <td> <text> the Size is  </text> @i.Sizee</td>
                                            <td>
                                                <span class="status--sale">Buy</span>
                                            </td>
                                            
                                            <td>@i.Product.Price</td>
                                            <td> <text> the count is  </text> @i.Count </td>

                                            <td>  <text> Color is </text> @i.ColorP</td>
                        
                                            <td> <img src="~/imageproduct/@Url.Content(@i.Product.image)" height="100" width="100" /> </td>
                                        </tr>
                                    }
                                }
                            }


                            <!--End-->
                        </tbody>
                    </table>
                </div>
                <div class="table-responsive table-responsive-data2">
                    <table class="table table-data2">
                        <thead>
                            <tr>
                                <th>Name of Dealer</th>
                                <th>date</th>
                                <th>status</th>
                                <th>Count</th>
                                <th>price</th>
                                <th>Type</th>
                                <th> Description </th>
                                <th> image</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.getproduct)
                            {
                                using (@Html.BeginForm("accept_product", "Requist", new { @Idproduct = item.Idproduct }, FormMethod.Post))
                                {


                                    <tr class="spacer"></tr>
                                    <tr class="tr-shadow">

                                        <td> @item.User.Fname <text>  </text> @item.User.Lname </td>
                                        <td>
                                            <span class="block-email"> @item.date.ToShortDateString()</span>
                                        </td>
                                        <td> <span class="status--upload">Add prodact</span> </td>
                                        <td>
                                            @item.count
                                        </td>
                                        <td><span class="status--sale">@item.Price<text>$</text></span></td>
                                        <td>   @item.Type  </td>

                                        <td>  @item.Description </td>
                                        <td>
                                            <img src="~/imageproduct/@Url.Content(item.image)" height="100" width="100" />
                                        </td>
                                        <td>
                                            <div class="table-data-feature">
                                                <button class="item" data-toggle="tooltip" value="send" name="submit" data-placement="top" title="Done">
                                                    <i class="zmdi zmdi-mail-send"></i>
                                                </button>

                                                <button class="item" data-toggle="tooltip" name="submit" value="delete" data-placement="top" title="Delete">
                                                    <i class="zmdi zmdi-delete"></i>
                                                </button>
                                            </div>

                                        </td>

                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>



                <div class="table-responsive table-responsive-data2">
                    <table class="table table-data2">
                        <thead>
                            <tr>
                                <th>Name of Dealer</th>
                                <th>birthday</th>
                                <th>status</th>
                                <th>CommercialRecord</th>
                                <th>Username</th>
                                <th>address</th>
                                <th> Phone </th>
                               

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.getaccount)
                            {
                                using (@Html.BeginForm("accept_account", "Requist", new { @idu = item.Idu }, FormMethod.Post))
                                {
                                    <tr class="tr-shadow">

                                        <td>@item.Fname @item.Lname</td>
                                        <td>

                                            <span class="block-email"> @item.birthday.ToShortDateString()</span>
                                        </td>
                                        <td> <span class="status--Create">Create Account</span></td>
                                        <td>
                                            @item.CommercialRecord
                                            
                                        </td>

                                        <td>@item.Username</td>
                                        <td> @item.address</td>

                                        <td>
                                            @item.Phone
                                        </td>


                                        <td>
                                            <div class="table-data-feature">
                                                <button class="item" data-toggle="tooltip" name="submit" value="Done" data-placement="top" title="Done">
                                                    <i class="zmdi zmdi-mail-send"></i>
                                                </button>
                                                <button class="item" data-toggle="tooltip" name="submit" value="delete" data-placement="top" title="Delete">
                                                    <i class="zmdi zmdi-delete"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
    <script src="~/Scripts/Home/jquery-.js"></script>
    <script src="~/Scripts/Requist/main.لائحة طلبات الادمن المعلقة.js"></script>

</body>
</html>